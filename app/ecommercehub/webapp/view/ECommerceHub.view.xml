<mvc:View
    controllerName="ecommercehub.controller.ECommerceHub"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f"
    xmlns:u="sap.ui.unified"
>
    <Page
        enableScrolling="true"
        showHeader="false"
    >
        <mvc:XMLView viewName="ecommercehub.view.Header" />
        <Carousel
            id="offerCarousel"
            width="100%"
            height="60%"
            loop="true"
            pages="{OfferBanner>/banners}"
            showPageIndicator="false"
        >
            <Image
                src="{OfferBanner>bannerUrl}"
                width="100%"
                height="100%"
                decorative="false"
            />
        </Carousel>
        <HBox
            justifyContent="Center"
            class="sapUiSmallMargin"
        >
            <Title
                text="Promoted Products"
                titleStyle="H2"
            />
        </HBox>
        <f:GridList
            id="gridList"
            items="{/PromotedProducts}"
            class="sapUiResponsiveContentPadding"
        >
            <f:customLayout>
                <grid:GridBasicLayout
                    gridTemplateColumns="repeat(auto-fit, minmax(16rem, 1fr))"
                    gridGap="1rem"
                />
            </f:customLayout>

            <f:items>
                <f:GridListItem
                    type="Active"
                    press="selectProduct"
                >
                    <VBox class="sapUiSmallMargin productCard">
                        <Image
                            src="{imageUrl}"
                            width="100%"
                            height="160px"
                            densityAware="false"
                            class="sapUiTinyMarginBottom"
                        />

                        <Title
                            text="{code}"
                            wrapping="true"
                            titleStyle="H4"
                        />

                        <Text
                            text="{description}"
                            wrapping="true"
                            class="sapUiTinyMarginBottom"
                        />

                        <u:Currency
                            value="{basePrice}"
                            currency="{currency}"
                            useSymbol="true"
                        />
                        <RatingIndicator
                            maxValue="5"
                            class="sapUiSmallMarginBottom"
                            value="{averageRating}"
                            editable="false"
                        />
                    </VBox>
                </f:GridListItem>
            </f:items>
        </f:GridList>
    </Page>
</mvc:View>
